{
  "version": "1.0.0-*",
  "description": "Cookie-based TempData provider for ASP.NET Core MVC",
  "authors": [ "Luís Gonçalves" ],

  "buildOptions": {
    "xmlDoc": true,
    "warningsAsErrors": true,
    "additionalArguments": [
      "/ruleset:../Main.ruleset",
      "/additionalfile:../stylecop.json"
    ]
  },

  "packOptions": {
    "tags": [
      "aspnetcore",
      "aspnetcoremvc",
      "mvc",
      "tempdata"
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/luisgoncalves/aspnetcore-cookietempdata.git"
    },
    "projectUrl": "https://github.com/luisgoncalves/aspnetcore-cookietempdata"
  },

  "dependencies": {
    "Microsoft.AspNetCore.Mvc.ViewFeatures": "1.0.0",
    "Microsoft.AspNetCore.DataProtection": "1.0.0",
    "Microsoft.Extensions.Options": "1.0.0",
    "Newtonsoft.Json": "9.0.1",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },

  "frameworks": {
    "netstandard1.6": {},
    "net451": {}
  }
}
